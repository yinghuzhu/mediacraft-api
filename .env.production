# MediaCraft 生产环境配置

# Flask 环境
FLASK_ENV=production
FLASK_DEBUG=false

# 服务器配置
HOST=127.0.0.1
PORT=50001

# 安全配置 - 生产环境请使用更强的密钥
SECRET_KEY=your-super-secure-production-secret-key-change-this

# CORS 配置 - 生产环境域名
CORS_ORIGINS=https://mediacraft.yzhu.name,http://127.0.0.1:3000

# 会话配置
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 文件上传配置
MAX_CONTENT_LENGTH=2147483648  # 2GB
UPLOAD_TIMEOUT=600
PROCESSING_TIMEOUT=1800

# 任务队列配置
MAX_CONCURRENT_TASKS=3
MAX_QUEUE_SIZE=50
TASK_RETENTION_DAYS=7

# 日志配置
LOG_LEVEL=INFO

# 生产环境
ENABLE_DEBUG_TOOLBAR=false
ENABLE_METRICS=true

DATA_DIR=/data/mediacraft