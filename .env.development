# MediaCraft 开发环境配置

# Flask 环境
FLASK_ENV=development
FLASK_DEBUG=true

# 服务器配置
HOST=127.0.0.1
PORT=50001

# 安全配置
SECRET_KEY=dev-secret-key-for-mediacraft-development

# CORS 配置 - 支持多个域名
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://mediacraft.yzhu.name

# 会话配置
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 文件上传配置
MAX_CONTENT_LENGTH=2147483648  # 2GB
UPLOAD_TIMEOUT=600
PROCESSING_TIMEOUT=1800

# 任务队列配置
MAX_CONCURRENT_TASKS=3
MAX_QUEUE_SIZE=50
TASK_RETENTION_DAYS=7

# 日志配置
LOG_LEVEL=INFO

# 开发工具
ENABLE_DEBUG_TOOLBAR=false
ENABLE_METRICS=true